{
    "name": "@doist/ui-extensions-core",
    "version": "5.0.0",
    "description": "",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/types/index.d.ts"
        }
    },
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/Doist/ui-extensions"
    },
    "scripts": {
        "watch": "npm run build && yalc push && chokidar src -c \"npm run build && yalc push\"",
        "lint-fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint-check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "format-check": "prettier --check .",
        "format-fix": "npx prettier --write .",
        "test": "jest",
        "clean": "rimraf dist",
        "reset": "rimraf dist node_modules",
        "prepare": "npm run build",
        "build:cjs": "npx tsc -p tsconfig.cjs.json",
        "build:esm": "npx tsc -p tsconfig.esm.json",
        "build:fix-esm": "node scripts/fix-esm-imports.cjs",
        "build:post": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
        "build": "npm run clean && npm-run-all build:cjs build:esm build:fix-esm build:post",
        "ts-compile-check": "tsc --noEmit",
        "integrity-check": "npm-run-all clean format-check lint-check ts-compile-check test",
        "link:yalc": "yalc link",
        "publish:yalc": "yalc push"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "prettier": "@doist/prettier-config",
    "files": [
        "dist/cjs/**/*",
        "dist/esm/**/*",
        "dist/types/**/*",
        "!dist/**/*.tsbuildinfo",
        "!dist/**/*.test.*"
    ],
    "dependencies": {
        "typescript-json-serializer": "3.4.5"
    }
}
